@model MissionProject.Models.Mission

@{
    ViewBag.Title = "Mission Information";
}
<script src="~/Scripts/myJS.js"></script>

<nav>
    <h2>@Html.DisplayFor(model => model.MissionName) Mission Information</h2>
</nav>
<hr />
<br />
<section style="width:60%">
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MissionName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MissionName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PresidentName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PresidentName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Language)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Climate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Climate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DominantReligion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DominantReligion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Flag)
        </dt>

        <dd>
            <img style="width:30%"src="@Html.DisplayFor(model => model.Flag)" alt="Alternate Text" />
        </dd>

    </dl>
</section>
<br />

<div style="float: left; width:45%">
    <h3>Frequently Asked Questions</h3>
    <table>
        <tr>
            <td valign="top"><span id="question1">@ViewBag.Question1</span></td>
            <td><input type="button" class="btn btn-primary btn-sm" onclick="response('1')" id="btn1" value="Reply" /><div id="output1"></div></td>
            
        </tr>
        <tr>
            <td valign="top"><span id="question2">@ViewBag.Question2</span></td>
            <td><input type="button" class="btn btn-primary btn-sm" onclick="response('2')" id="btn2" value="Reply" /><div id="output2"></div></td>
            
        </tr>
        <tr>
            <td valign="top"><span id="question3">@ViewBag.Question3</span></td>
            <td><input type="button" class="btn btn-primary btn-sm" onclick="response('3')" id="btn3" value="Reply" /><div id="output3"></div></td>
            
        </tr>
        <tr>
            <td valign="top"><span id="question4">@ViewBag.Question4</span></td>
            <td><input type="button" class="btn btn-primary btn-sm" onclick="response('4')" id="btn4" value="Reply" /><div id="output4"></div></td>
            
        </tr>
        <tr>
            <td valign="top"><span id="question5">@ViewBag.Question5</span></td>
            <td><input type="button" class="btn btn-primary btn-sm" onclick="response('5')" id="btn5" value="Reply" /><div id="output5"></div></td>
            
        </tr>

    </table>
</div>

<div>
    <h3>Ask a Question</h3>
    <form>
        <textarea rows="4" cols="50" placeholder="Ask a question here..."></textarea>
        <br />
        <input class="btn btn-primary btn-sm" type="submit" value="Submit" />
    </form>
</div>
<br />

